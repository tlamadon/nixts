{
  "name": "nixts",
  "version": "0.1.0",
  "description": "A TypeScript DSL for building Nix flakes with builder pattern and nixpkgs introspection.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p .",
    "generate:python": "nix-instantiate --eval --strict --json -E 'builtins.attrNames (import <nixpkgs> {}).python3Packages' | jq '.' > src/nixpkgs/data/python-packages.json",
    "generate:nixpkgs": "nix-instantiate --eval --strict --json -E 'builtins.attrNames (import <nixpkgs> {})' | jq '.' > src/nixpkgs/data/nixpkgs-packages.json",
    "generate:homemanager": "bash scripts/generate-homemanager-options.sh",
    "generate:homemanager:types": "tsx scripts/generate-homemanager-types.ts",
    "generate:types": "tsx scripts/generate-types.ts && npm run generate:homemanager:types",
    "generate": "npm run generate:python && npm run generate:nixpkgs && npm run generate:homemanager && npm run generate:types"
  },
  "keywords": [
    "nix",
    "nixpkgs",
    "nixos",
    "home-manager",
    "builder",
    "typescript",
    "dsl"
  ],
  "author": "Thibaut Lamadon",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.5.0",
    "tsx": "^4.7.0"
  }
}